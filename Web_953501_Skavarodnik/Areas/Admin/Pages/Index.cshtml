@page
@model Web_953501_Skavarodnik.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Drink[0].DrinkName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drink[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drink[0].Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drink[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drink[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Drink)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Image" alt="NoImage" width="50" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DrinkName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.DrinkGroupId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DrinkId"
                   class="btn btn-outline-info">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.DrinkId"
                   class="btn btn-outline-danger">
                        <span class="fas fa-trash-alt"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
