@page "{id:int}"
@model Web_953501_Skavarodnik.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Drink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Drink.DrinkId" />
            <div class="form-group">
                <label asp-for="Drink.DrinkName" class="control-label"></label>
                <input asp-for="Drink.DrinkName" class="form-control" />
                <span asp-validation-for="Drink.DrinkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Description" class="control-label"></label>
                <input asp-for="Drink.Description" class="form-control" />
                <span asp-validation-for="Drink.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Volume" class="control-label"></label>
                <input asp-for="Drink.Volume" class="form-control" />
                <span asp-validation-for="Drink.Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Drink.Image))
                {
                    <img src=~/Images/@Model.Drink.Image
                     alt="NoSuchFile" width="150" />

                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Drink.DrinkGroupId" class="control-label"></label>
                <select asp-for="Drink.DrinkGroupId" class="form-control" asp-items="ViewBag.DrinkGroupId"></select>
                <span asp-validation-for="Drink.DrinkGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

