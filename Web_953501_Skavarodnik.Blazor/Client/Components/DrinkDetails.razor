@if (Drink != null)
{
    <img src="@imageSrc" class="img-thumbnail" width="150" />
    <div>
        <p>@Drink.DrinkName - @Drink.Description</p>
        <div class="badge badge-info ">
            @Drink.Volume
                мл.
        </div>
    </div>
}
@code {
    [Parameter]
    public DetailsViewModel Drink { get; set; }
    [Parameter]
    public EventCallback<DetailsViewModel> DrinkChanged { get; set; }
    string imageSrc
    {
        get
        {
            return $"images/{Drink.Image}";
        }
    }
}